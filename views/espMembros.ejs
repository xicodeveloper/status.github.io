                placeholder="<%= member.bio %>"><%= member.bio %></textarea>
              <small class="form-text text-muted">Write the bio</small>
          </div>
          
            <div class="form-group">
                <label for="imageInput">Image</label>
                <input  type="file" value="<%= member.image %>" class="form-control" id="imageInput" name="file" accept="image/*" onchange="displaySelectedImage(event)">
                <small class="form-text text-muted">Upload an image file</small>
            </div>
            
            <!-- Display selected filename or placeholder image -->
            <% if (member.image) { %>
                <div class="" style="display: flex;justify-content: center; align-items: center;">
                    <img id="selectedImage"  src="/<%= member.image %>" alt="Image Placeholder" style="max-width: 300px;">
                </div>
                
            <% } else { %>
                <div class="" style="display: flex;justify-content: center; align-items: center;">
                <div id="placeholderImage" style="width: 300px; height: 200px; background-color: #ccc;">Sem Imagem</div>
         </div>
                <% } %>
            
  
